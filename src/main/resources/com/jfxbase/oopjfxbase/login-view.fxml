<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vBox" alignment="CENTER" prefHeight="366.0" prefWidth="388.0" snapToPixel="false" spacing="20.0" stylesheets="@login-style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jfxbase.oopjfxbase.controllers.LoginViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Text fx:id="userPrompt" fill="#08055b" strokeType="OUTSIDE" strokeWidth="0.0" text="WELCOME!">
      <font>
         <Font name="System Bold Italic" size="36.0" />
      </font></Text>
    <TextField fx:id="userName" promptText="Enter your username.." />
   <PasswordField fx:id="password" promptText="Enter your password..." />
    <Button id="goToByeScene" onAction="#onGoToGoodBye" snapToPixel="false" text="EXIT" />
    <Button id="Login" onAction="#onLoginButtonClick" text="Login" />
   <Button fx:id="SignIn" mnemonicParsing="false" onAction="#onSignInButtonClick" text="SignUp" />
</VBox>
